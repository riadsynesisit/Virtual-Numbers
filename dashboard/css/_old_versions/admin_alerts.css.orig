/* additional integration changes */

.status_red { background-color: #BD0D0D; color: white; font-variant: small-caps; }
.status_yellow { background-color: yellow; color: black; font-variant: small-caps; }
.status_orange { background-color: orange; color: black; font-variant: small-caps; }
.status_blue { background-color: blue; color: white; font-variant: small-caps; }
